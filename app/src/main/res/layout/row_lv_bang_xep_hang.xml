<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txt_row_bxh_ten_baihat1"
        android:layout_width="230dp"
        android:layout_height="30dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:transitionName="ten_baihat0"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/img_row_bang_xep_hang"
        android:layout_marginLeft="8dp" />

    <TextView
        android:id="@+id/txt_row_bxh_ten_baihat3"
        android:layout_width="230dp"
        android:transitionName="ten_baihat2"
        android:layout_height="30dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        app:layout_constraintLeft_toRightOf="@+id/img_row_bang_xep_hang"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_row_bxh_ten_baihat2" />

    <TextView
        android:id="@+id/txt_row_bxh_ten_baihat2"
        android:layout_width="230dp"
        android:layout_height="30dp"
        android:transitionName="ten_baihat1"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_row_bxh_ten_baihat1"
        app:layout_constraintLeft_toRightOf="@+id/img_row_bang_xep_hang"
        android:layout_marginLeft="8dp" />

    <ImageView
        android:id="@+id/img_row_bang_xep_hang"
        android:layout_width="130dp"
        android:layout_height="105dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher" />
</android.support.constraint.ConstraintLayout>
