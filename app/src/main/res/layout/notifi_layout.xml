<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txt_ten_baihat_noti"
        android:layout_width="wrap_content"
        android:minWidth="200dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="92dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="Tên bài hát"
        android:textColor="@color/colorRed_beauty"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_duration_noti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="171dp"
        android:layout_marginTop="47dp"
        android:text="4:25"
        android:textSize="20sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btn_prev_noti"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:background="@null"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_duration_noti"
        app:srcCompat="@drawable/backward" />

    <ImageButton
        android:id="@+id/btn_play_noti"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginRight="176dp"
        android:layout_marginTop="8dp"
        android:background="@null"
        android:visibility="gone"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_duration_noti"
        app:srcCompat="@drawable/play" />

    <ImageButton
        android:id="@+id/btn_pause_noti"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginRight="176dp"
        android:layout_marginTop="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_duration_noti"
        app:srcCompat="@drawable/pause"
        android:background="@null"
        />

    <ImageButton
        android:id="@+id/btn_next_noti"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="0dp"
        android:background="@null"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn_pause_noti"
        app:srcCompat="@drawable/fastward" />
</android.support.constraint.ConstraintLayout>
